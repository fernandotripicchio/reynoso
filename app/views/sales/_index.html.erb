<div>
  	<%= simple_form_for :keys , :url => search_branch_sales_path(@branch) ,:html => { :class => "form-search" } do |f| %>
      <div class="input-append">
        <input type="text" name="keys" class="span18 search-query" value="<%= @keys%>">
        <button type="submit" class="btn">Buscar</button>
      </div>
    <% end %> 
</div>

<div class="row-fluid">
	<%= paginate @sales %>
</div>
<div class="row-fluid">
<table class="table table-striped">
	<thead>
	  <tr>
	  	<th>Nro</th>
	    <th>Fecha</th>
	    <th>Cliente</th>
	    <th>Forma de Pago</th>
	    <th>Cobrada</th>
	    <th>Monto</th>   
	  </tr>
</thead>
<tbody>
<% @sales.each do | sale | %>
<% disabled = ( sale.pagada?) ? "disabled" : "" %>
  <tr>
  	<td><%= sale.id %></td>
  	<td><%= sale.getFecha %></td>
  	<td><%= ( !sale.client.blank? ) ? sale.client.name : "" %></td>
  	<td><%= sale.payment %></td>
  	<td><%= sale.pagada? %></td>
  	<td> $ <%= sale.monto(@branch) %></td>
    <td><%= link_to 'Editar', edit_branch_sale_path(@branch, sale), :class => "btn btn-primary  "%></td>
    <td><%= link_to 'Anular', branch_sale_path(@branch,sale), method: :delete, data: { confirm: 'EstÃ¡ seguro que desea anular la venta?' }, :class => "btn btn-danger " %></td>    
  </tr>
<% end %>
</tbody>
</table>
</div>

