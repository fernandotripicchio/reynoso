	<legend>Sucursal <%=@branch.name %> - Nuevo Venta:</legend>
	<div class="row-horizontal">
	  	<%= simple_form_for @sale , :url => branch_sales_path(@branch, @sale), :html => { :class => "form-horizontal" } do |f| %>
	  	<%= render :partial => "form", :locals => {:f => f}%>
	  	<hr />
	  	<%= link_to "Cancelar", branch_sales_path(@branch), :class => "btn btn-secundary btn-form"%>
