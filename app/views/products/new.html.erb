<div id="edit_form" class="form_user">  	
	<legend>Sucursal <%= @branch.name %> - Nuevo Producto </legend>
	<div class="row-horizontal">
	  	<%= simple_form_for @product , :url => branch_products_path(@branch, @product) ,:html => { :class => "form-horizontal" } do |f| %>
	  	<%= render :partial => "form", :locals => {:f => f}%>
	  	<hr />
	    <%= link_to "Cancelar", branch_products_path(@branch), :class => "btn btn-secundary btn-form"%>
	    <%= f.submit "Guardar", :class => "btn btn-primary btn-form"%>
	    <% end %>
	</div>
</div>

