<fieldset>	
	<%= f.association :product, :collection => Product.all(order: 'name'), :prompt => "Seleccione un producto", :label => "Producto" %>
    <%= f.association :branch, :collection => Branch.all(order: 'name'), :prompt => "Seleccione una Sucursal", :label => "Sucursal" %>	
    <%= f.association :supplier, :collection => Supplier.all(order: 'name'), :prompt => "Seleccione un Proveedor", :label => "Proveedor" %>
    <% if editar %>
       <%= f.input :kind_movement, :collection => ["Incremento", "Descuento"], :label => "Tipo:"  %>    
    <% end %>	
	<%= f.input :size, :placeholder => "cantidad",:label => "Cantidad:",  :input_html => { class: 'input-small'  }  %>
    
</fieldset>  
