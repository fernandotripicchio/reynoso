<div id="edit_form" class="form_user">  	
	<legend>Editar Stock:</legend>
	<div class="row-horizontal">
	  	<%= simple_form_for @stock, :url => branch_actualizar_stock_path(@branch) ,  :html => { :class => "form-horizontal" } do |f| %>
	  	<%= render :partial => "form", :locals => {:f => f, :editar => true}%>
