<legend>Surcusales</legend>
<div class="row-fluid">
<table class="table table-striped">
	<thead>
  <tr>
    <th>Nombre</th>
    <th>Télefono</th>
    <th>Email</th>
    <th class="span4"></th>
  </tr>
</thead>
<tbody>
<% @branches.each do | branch | %>
  <tr>
  	<td><%= branch.name %></td>
  	<td><%= branch.address %></td>  	
  	<td><%= branch.email %></td>
    <td>
     <%= link_to 'Stock', "#", :class => "btn btn-primary pull-right pull-btn-left"%>    	
     <%= link_to 'Editar', edit_branch_path( branch) , :class => "btn btn-primary pull-right pull-btn-left"%>
     <%= link_to 'Borrar', branch, method: :delete, data: { confirm: 'Está seguro que desea borrar la sucursal?' }, :class => "btn btn-danger pull-right pull-btn-left" %>
    </td>
  </tr>
<% end %>
</tbody>
</table>
