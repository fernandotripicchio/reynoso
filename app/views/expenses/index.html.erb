<legend>Sucursal <%= @branch.name %> - Listado de Gastos</legend>
<%= link_to "Excel Gastos", download_expenses_path(@branch, :format => "xls"), :class => "btn btn-primary pull-left" %>

<div class="row-fluid">
<table class="table table-striped">
	<thead>
	<tr>
	    <th>Fecha</th>
	    <th>Monto</th>
	    <th>Descripción</th>
	    <th>&nbsp;</th>
  </tr>
</thead>
<tbody>
<% @expenses.each do | expense | %>
  <tr>
    <td>  <%= expense.expense_date %>    </td>
    <td>  <%= expense.size %>	</td>
    <td>$ <%= expense.description %>   </td>
    <td>  <%= link_to 'Editar', edit_branch_expense_path(@branch, expense ), :class => "btn btn-primary"  %> </td>
    <td>  <%= link_to 'Borrar', branch_expense_path(@branch, expense), method: :delete, data: { confirm: 'Está seguro que desea borrar el gasto?' }, :class => "btn btn-danger"  %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />


